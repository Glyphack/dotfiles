{
  "title": "Capslock tap to escape, hold to hyper",
  "maintainers": [
    "Glyphack"
  ],
  "author": "https://github.com/Glyphack",
  "rules": [
    {
      "description": "Capslock to Hyper",
      "manipulators": [
        {
          "description": "Click to Capslock, Hold to Hyper",
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": [
                "right_command",
                "right_control",
                "right_option"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    }
  ]
}
